<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mountinfo_list_fragment">

    <fragment
        android:id="@+id/mountinfo_list_fragment"
        android:name="de.k3b.android.zip2saf.MountInfoListFragment"
        android:label="@string/title_mountinfo_list">
        <action
            android:id="@+id/show_mountinfo_detail"
            app:destination="@id/mountinfo_detail_fragment" />
    </fragment>
    <fragment
        android:id="@+id/mountinfo_detail_fragment"
        android:name="de.k3b.android.zip2saf.MountInfoDetailFragment"
        android:label="@string/title_mountinfo_detail"
        tools:layout="@layout/fragment_mountinfo_detail">
        <argument
            android:name="item_id"
            android:defaultValue=""
            app:argType="string" />
    </fragment>
</navigation>